# Docker Environment Configuration
# This file is used for Docker deployments

# Application Settings
APP_NAME=Stockura
APP_VERSION=0.1.0
DEBUG=False
LOG_LEVEL=INFO

# API Settings
API_V1_PREFIX=/api/v1
API_TITLE=Stockura API
API_DESCRIPTION=Stock Data Analysis Platform API

# Database Settings (Docker internal network)
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/stockura"
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=False

# PostgreSQL Container Settings
POSTGRES_USER=stockura
POSTGRES_PASSWORD=stockura_password
POSTGRES_DB=stockura

# Redis Settings (Docker internal network)
REDIS_URL=redis://redis:6379/0
REDIS_TTL=3600
REDIS_MAX_CONNECTIONS=10

# Celery Settings (Docker internal network)
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=Asia/Tokyo
CELERY_ENABLE_UTC=True

# External API Settings
# J-Quants API (Add your credentials)
JQUANTS_API_KEY=
JQUANTS_EMAIL=
JQUANTS_PASSWORD=
JQUANTS_BASE_URL=https://api.jquants.com/v1
JQUANTS_TIMEOUT=30
JQUANTS_MAX_RETRIES=3
JQUANTS_EMAIL="jquants_user_email@example.com"
JQUANTS_PASSWORD="jquants_password"

# yFinance Settings
YFINANCE_TIMEOUT=30
YFINANCE_MAX_RETRIES=3

# Security Settings
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring
SENTRY_DSN=
PROMETHEUS_PORT=9090
