# Test Environment Configuration
# このファイルはテスト実行時に使用される環境変数を定義します

# Database
DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/stockura_test
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/1
REDIS_PREFIX=test:

# J-Quants API (Mock Server)
JQUANTS_API_BASE_URL=http://localhost:8001
JQUANTS_EMAIL=test@example.com
JQUANTS_PASSWORD=test_password

# Application Settings
SECRET_KEY=test_secret_key_for_testing_only
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Test Mode Flag
TEST_MODE=true
ENV=test

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Celery (Test Configuration)
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_ALWAYS_EAGER=true  # テスト時は非同期タスクを同期実行

# API Rate Limiting (Disabled for tests)
RATE_LIMIT_ENABLED=false