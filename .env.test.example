# テスト環境用の環境変数設定例
# このファイルを .env.test にコピーして使用してください
# cp .env.test.example .env.test

# アプリケーション設定
APP_ENV=test
DEBUG=true
SECRET_KEY="your-test-secret-key-here-change-this"

# サーバー設定
HOST=0.0.0.0
PORT=8001

# データベース設定（テスト用）
# Docker環境の場合
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/stockura_test
# ローカル環境の場合
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/stockura_test

# Redis設定（テスト用）
# Docker環境の場合
REDIS_URL=redis://redis:6379/1
# ローカル環境の場合
# REDIS_URL=redis://localhost:6379/1

# API設定（テスト用のモックキー）
JQUANTS_API_KEY=test-api-key
JQUANTS_REFRESH_TOKEN=test-refresh-token

# 暗号化設定（テスト用）
# 本番環境とは異なるキーを使用してください
ENCRYPTION_KEY="your-test-encryption-key-change-this-1234567890123456789012"
ENCRYPTION_SALT="your-test-salt-change-this-123456"
ENCRYPTION_ITERATIONS=100000
ENCRYPTION_KEY_LENGTH=32
ENCRYPTION_ALGORITHM=SHA256

# データベース設定
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false

# データソース認証情報（テスト用）
# 実際のAPIキーは使用しないでください
JQUANTS_MAILADDRESS=test@example.com
JQUANTS_PASSWORD=test-password-do-not-use-real